@model TCABS.Data.Models.Entities.Enrolment

<h4>Create Enrolment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEnrolment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.Student_ID, new SelectList(Model.Student_List, "Student_ID", "Student_Name"), "Select Student", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.UnitOffering_ID, new SelectList(Model.UnitOffering_List, "UnitOffering_ID", "Unit_Name"), "Select UnitOffering", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-action="ViewEnrolments">Cancel</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>