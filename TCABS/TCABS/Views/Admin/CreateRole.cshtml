@model TCABS.Data.Models.AdminViewModels.RoleClaimViewModel

<h4>RoleViewModel</h4>
<hr />
<div class="row mx-4">
    <div>
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control col-lg-4" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
                @foreach (var claimList in Model.ClaimLists)
                {
                    <h5 class="mt-3">@claimList.First().ClaimType</h5>
                    <div class="row">
                        @foreach (var claim in claimList)
                        {
                            <div class="col-lg-3 col-md-6">
                                <input id="claim@(claim.ID)"
                                       type="checkbox"
                                       name="SelectedClaims"
                                       value="@claim.ID"
                                       @(Model.SelectedClaims.Contains(claim.ID) ? "checked" : "") />
                                <label for="@(claim.ID)">@claim.DisplayName</label>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="ViewRoles">Cancel</a>
                <input type="submit" value="Create Role" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>